alias pycharm='cd ~/bin/pycharm-2.6/bin && ./pycharm.sh'

# services
alias mem-restart='sudo service memcached restart'

# solr
alias solr-restart='sudo service tomcat6 restart'
alias solr-index='python manage.py rebuild_index --noinput'

# itechart-project
alias prj-itag-si='solr-index --settings=website.settings_dev'
alias prj-itag-migrate='python manage.py migrate --settings=website.settings_dev'

scheme_migration(){
	python manage.py schemamigration $1 --auto --settings=website.settings_dev
}
alias prj-itag-schm='scheme_migration'

notify(){
	notify-send "[$1] $2"
}
alias nt='notify'

# git
alias gitst='git status -s'
alias gitci='git commit -m'
alias gita='git add -i'
alias gitco='git checkout'
alias gitplo='git pull origin'
alias gitpso='git push origin'
alias gits='git stash'
alias gitc='git-cola'
alias gitb='git branch'
alias gitm='git merge'

# svn 
alias svnadd='svn add `svn status | grep -Eo "\?.*" | grep -Eo "([^ \?].*)"`'
alias svnrm='svn rm `svn status | grep -Eo "\!.*" | grep -Eo "([^ \!].*)"`'
alias svnci='svn commit -m'
alias svnst='svn status'
