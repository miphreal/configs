# vim:fileencoding=utf-8:ft=conf:foldmethod=marker:fmr=[[[,]]]

font_family {{ kitty_font }}
font_size {{ kitty_font_size }}
italic_font {{ kitty_font_italic }} 

# system settings
detect_urls yes
copy_on_select yes
kitty_mod ctrl+shift
allow_remote_control yes

# bells
enable_audio_bell no
window_alert_on_bell yes
bell_on_tab yes

# layout
enabled_layouts *

# tab bar
tab_bar_margin_width      1.5
tab_bar_margin_height     2.5 0
tab_bar_style             separator
tab_bar_min_tabs          2
tab_separator             " "
tab_title_template        "{fmt.fg._5c6370}{fmt.bg.default}{fmt.fg._abb2bf}{fmt.bg._5c6370}{title}{fmt.fg._5c6370}{fmt.bg.default}"
active_tab_title_template "{fmt.fg._e5c07b}{fmt.bg.default}{fmt.fg._282c34}{fmt.bg._e5c07b}{title}{fmt.fg._e5c07b}{fmt.bg.default}"
tab_bar_edge top
tab_bar_align center


# key maps
map kitty_mod+t       new_tab_with_cwd
map super+t           new_tab
map ctrl+alt+1 goto_tab 1
map ctrl+alt+2 goto_tab 2
map ctrl+alt+3 goto_tab 3
map ctrl+alt+4 goto_tab 4
map ctrl+alt+5 goto_tab 5
map ctrl+alt+6 goto_tab 6
map ctrl+alt+7 goto_tab 7
map ctrl+alt+8 goto_tab 8
map ctrl+alt+9 goto_tab 9
map ctrl+alt+0 previous_tab

# MacOS specific
macos_titlebar_color system
macos_traditional_fullscreen yes
macos_quit_when_last_window_closed yes
macos_window_resizable yes
hide_window_decorations titlebar-only
window_margin_width 2
background_opacity 1.0

include current-theme.conf
