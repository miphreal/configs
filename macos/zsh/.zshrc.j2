zle -N up-line-or-beginning-search
zle -N down-line-or-beginning-search

# ssh
(eval "$(ssh-agent -s)") > /dev/null
(ssh-add $HOME/.ssh/id_github) 2> /dev/null
alias ssh="kitty +kitten ssh"

# ls
alias ls=exa
alias ll='exa -la'

# git
alias gits='git status'


