projects_menu = rofi_menu.Menu(
    prompt="Projects",
    items=[
        rofi_menu.BackItem(),
        rofi_menu.ShellItem("qcheck", "code-insiders ~/Develop/qcheck/"),
        rofi_menu.ShellItem("rofi-menu", "code-insiders ~/Develop/rofi-menu/"),
        rofi_menu.ShellItem("meuskit", "code-insiders ~/Develop/meuskit/"),
        rofi_menu.ShellItem("BlackCat", "code-insiders ~/Develop/experiments/blackcat/"),
        rofi_menu.ShellItem("Planner", "code-insiders ~/Develop/experiments/planner/"),
        rofi_menu.ShellItem("El Menu", "code-insiders ~/Develop/experiments/elmenu/"),
        rofi_menu.ShellItem(
